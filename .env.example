# Environment Configuration for SecureBox

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=securebox
POSTGRES_USER=securebox_user
POSTGRES_PASSWORD=secure_password_change_in_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=securebox-files
MINIO_SECURE=false

# Encryption Configuration
ENCRYPTION_KEY_SIZE=32
RSA_KEY_SIZE=2048

# API Configuration
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=5000
ENCRYPTION_SERVICE_HOST=0.0.0.0
ENCRYPTION_SERVICE_PORT=8001

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# File Configuration
MAX_FILE_SIZE_MB=100
DEFAULT_EXPIRY_HOURS=24
MAX_EXPIRY_HOURS=168  # 7 days

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development/Production
ENVIRONMENT=development
DEBUG=true
